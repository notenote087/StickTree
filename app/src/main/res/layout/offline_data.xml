<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.sticktree.offline_Data">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tree_name_offline"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:text="ชื่อพรรณไม้"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="255dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="162dp"
                app:srcCompat="@mipmap/ic_launcher" />
        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="64dp">

                <TextView
                    android:id="@+id/sciencename_offline"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="sciencename_offline"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/localname_offline"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="localname_offline"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/character_offline"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="character_offline"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/typetree_offline"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="typetree_offline"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:textSize="15sp" />





                <Button
                    android:id="@+id/back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@color/colorAccent"
                    android:text="กลับ"
                    android:textColor="@color/White" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
